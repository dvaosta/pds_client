<UserControl x:Class="pds_client.ServerApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pds_client"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="300"
             Name="applicationRoot">
    <Grid>
        <Image Source="{Binding ElementName=applicationRoot, Path=IconPath}" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" VerticalAlignment="Top" Width="65"/>
        <Label Content="{Binding ElementName=applicationRoot, Path=ApplicationName}" HorizontalAlignment="Left" Height="35" Margin="80,10,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="{Binding ElementName=applicationRoot, Path=FocusPercentage}" HorizontalAlignment="Left" Height="35" Margin="185,10,0,0" VerticalAlignment="Top" Width="40"/>
        <Button x:Name="modifyButton" Content="Lancia comando" Margin="225,0,0,0"/>
    </Grid>
</UserControl>
